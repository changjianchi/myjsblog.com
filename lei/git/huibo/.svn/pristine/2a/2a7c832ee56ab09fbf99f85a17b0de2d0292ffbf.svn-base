@charset "utf-8";
.huibo-about .con-cen-h2 p{
    text-align: left;
    padding-left: 2.13rem;
}
.about-k4{
    width: 100%;
    height: 2.8rem;
    margin-top: 1.4rem;
}
.about-k4-i{
    display: inline-block;
    width: 2.4rem;
    height: 100%;
    overflow: hidden;
}
.about-k4-i i{
    display: block;
    width: 2.2rem;
    height: 2.2rem;
    margin:0 auto;
    border-radius: 50%;
    background: rgba(0,0,0,0.3);
}
.about-k4-i i div{
    width: 100%;
    height: 100%;
}
.about-k4-i em{
    font-size: .33rem;
    text-align: center;
    width: 100%;
    display: block;
    height: .33rem;
    line-height: .33rem;
    margin-top: .16rem;
}
.about-cen{
    margin-top: 20px;
    width: 100%;
    height: auto;
    overflow: hidden;
    position: relative;
}
.about-img-bt,.about-img-bt img{
    width: 100%;
    height: auto;
    display: block;
}
.about-logo-text{
    width: 100%;
    height: auto;
    overflow: hidden;
    padding:0 .55rem;
    font-size: .32rem;
    color: #8d8d8d;
    line-height: .45rem;
    letter-spacing: -0.039em;
    text-align: justify;
}
.about-logo-text img{
    width: auto;
    height: auto;
    display: block;
    margin:.5rem 0 .15rem;
}
.about-logo-text em,.about-logo-text span{
    display: block;
    width: 100%;
    height: auto;
}
.about-logo-text em a{
    float: right;
    display: inline-block;
    text-decoration: underline;
    color: #000;
}
.about-text-txt{
    text-align: justify;
    width: 100%;
    height: auto;
    overflow: hidden;
    padding:0 .55rem;
    font-size: .32rem;
    color: #8d8d8d;
    line-height: .45rem;
}
.about-text-txt h1{
    display: block;
    width: 100%;
    height: .55rem;
    line-height: .55rem;
    font-size: .55rem;
    margin:1.1rem 0 .2rem;
    color: #000;
}
.about-text-txt .b-stop{
    display: block;
    width: 4.1rem;
    height: auto;
    margin: .1rem 0;
}
.about-text-txt p.c000{
    color: #000;
}
.about-um{
    width: 100%;
    height: auto;
    margin-top: 1.3rem;
    padding:0 .55rem;
}
.about-um-top{
    width: 100%;
    height: 2.65rem;
}
.about-um-top span{
    display: block;
    float: left;
    width: 45%;
    height: 100%;
    padding-left: 1.6rem;
}
.about-um-top span:first-child{
    width: 55%;
    border-right: 1px solid #e1e1e1;
    padding-left: 0;
}
.about-um-bottom{
    border-top: 1px solid #e1e1e1;
    height: 3.1rem;
}
.about-um-bottom span{
    padding-top: .6rem;
}
.about-um-top span i{
    display: block;
    width: 100%;
    height: .378rem;
    line-height: .378rem;
    font-size: .378rem;
    color: #8d8d8d;
}
.about-um-top span b{
    display: inline-block;
    width: auto;
    font-family: Impact;
    height: 1.14rem;
    font-size: 1.14rem;
    line-height: 1.14rem;
    margin:.1rem 0;
    color: #94d60a;
    position: relative;
}
.about-um-top span b.act:after{
    content: "";
    display: block;
    width: .37rem;
    height: .37rem;
    background: url(../img/about/jiahao.png) no-repeat center;
    background-size: 100% auto;
    position: absolute;
    top: 0;
    left: 100%;
}